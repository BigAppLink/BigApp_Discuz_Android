<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <uk.co.senab.photoview.PhotoView
            android:id="@+id/photoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter" />

        <com.kit.imagelib.widget.imageview.GifView
            android:id="@+id/gifImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.kit.imagelib.widget.progressbar.RoundProgressBar
                android:id="@+id/pb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                app:RoundProgressBar_roundColor="#80FFFFFF"
                app:RoundProgressBar_roundProgressColor="#DDFFFFFF"
                app:RoundProgressBar_textColor="#DDFFFFFF"
                app:RoundProgressBar_roundWidth="3dp"
                app:RoundProgressBar_textSize="18sp"/>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>