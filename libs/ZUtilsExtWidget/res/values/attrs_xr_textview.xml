<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="XRTextView">

        <!-- 控件背景 -->
        <attr name="XRTextView_background" format="reference" />

        <!-- 标题文字 -->
        <attr name="XRTextView_title" format="string" />
        <!-- 标题文字颜色 -->
        <attr name="XRTextView_title_color" format="color" />
        <!-- 标题文字大小 -->
        <attr name="XRTextView_title_size" format="dimension" />
        <!-- 标题文字 -->
        <attr name="XRTextView_title_margin" format="dimension" />
        <!-- 标题文字 -->
        <attr name="XRTextView_title_margin_left" format="dimension" />
        <!-- 标题文字 -->
        <attr name="XRTextView_title_margin_right" format="dimension" />

        <!-- 内容文字 -->
        <attr name="XRTextView_content" format="string" />
        <!-- 内容文字间距 -->
        <attr name="XRTextView_content_margin" format="dimension" />
        <!-- 内容文字间距 -->
        <attr name="XRTextView_content_margin_left" format="dimension" />
        <!-- 内容文字间距 -->
        <attr name="XRTextView_content_margin_right" format="dimension" />
        <!-- 内容文字颜色 -->
        <attr name="XRTextView_content_color" format="color" />
        <!-- 内容文字大小 -->
        <attr name="XRTextView_content_size" format="dimension" />

        <!-- 标题文字 -->
        <attr name="XRTextView_margin" format="dimension" />
        <!-- 标题文字 -->
        <attr name="XRTextView_margin_left" format="dimension" />
        <!-- 标题文字 -->
        <attr name="XRTextView_margin_right" format="dimension" />

        <!-- 内容文字,是否居左 -->
        <attr name="XRTextView_is_content_left" format="boolean" />
    </declare-styleable>

</resources>