<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PullToRefreshListView">

        <!-- 是否启用头部的progressbar -->
        <attr name="PullToRefreshListView_HeaderProgressBarEnabled" format="boolean" />

        <!-- 是否启用头部的arrow -->
        <attr name="PullToRefreshListView_HeaderArrowEnabled" format="boolean" />

        <!-- 是否启用头部的arrow -->
        <attr name="PullToRefreshListView_HeaderIconEnabled" format="boolean" />

        <!-- 头部的日期 -->
        <attr name="PullToRefreshListView_HeaderTimeEnabled" format="boolean" />

        <!-- 头部的arrow图片 -->
        <attr name="PullToRefreshListView_HeaderIconSrc" format="reference|color" />

        <!-- Header是否可见 -->
        <attr name="PullToRefreshListView_HeaderVisiblity" format="boolean" />

        <!-- Header实际高度 -->
        <attr name="PullToRefreshListView_HeaderRealHeight" format="dimension" />

        <!-- 是否启用底部的progressbar -->
        <attr name="PullToRefreshListView_FooterProgressBarEnabled" format="boolean" />

        <!-- 是否启用底部的textview -->
        <attr name="PullToRefreshListView_FooterTextViewEnabled" format="boolean" />

        <!-- Footer是否可见 -->
        <attr name="PullToRefreshListView_FooterVisiblity" format="boolean" />

        <!-- Footer实际高度 -->
        <attr name="PullToRefreshListView_FooterRealHeight" format="dimension" />

        <!-- Footer可见高度 -->
        <attr name="PullToRefreshListView_FooterVisibleHeight" format="dimension" />


        <!-- A drawable to use as the background of the Refreshable View -->
        <attr name="PullToRefreshListView_RefreshableViewBackground" format="reference|color" />

        <!-- A drawable to use as the background of the Header and Footer Loading Views -->
        <attr name="PullToRefreshListView_HeaderBackground" format="reference|color" />

        <!-- Text Color of the Header and Footer Loading Views -->
        <attr name="PullToRefreshListView_HeaderTextColor" format="reference|color" />

        <!-- Text Color of the Header and Footer Loading Views Sub Header -->
        <attr name="PullToRefreshListView_HeaderSubTextColor" format="reference|color" />



        <!-- Mode of Pull-to-Refresh that should be used -->
        <attr name="PullToRefreshListView_Mode">
            <flag name="disabled" value="0x0" />
            <flag name="pullFromStart" value="0x1" />
            <flag name="pullFromEnd" value="0x2" />
            <flag name="both" value="0x3" />
            <flag name="manualOnly" value="0x4" />

            <!-- These last two are depreacted -->
            <flag name="PullToRefreshListView_pullDownFromTop" value="0x1" />
            <flag name="PullToRefreshListView_pullUpFromBottom" value="0x2" />
        </attr>

        <!-- Whether the Indicator overlay(s) should be used -->
        <attr name="PullToRefreshListView_ShowIndicator" format="reference|boolean" />

        <!-- Drawable to use as Loading Indicator. Changes both Header and Footer. -->
        <attr name="PullToRefreshListView_Drawable" format="reference" />

        <!-- Drawable to use as Loading Indicator in the Header View. Overrides value set in Drawable. -->
        <attr name="PullToRefreshListView_DrawableStart" format="reference" />

        <!-- Drawable to use as Loading Indicator in the Footer View. Overrides value set in Drawable. -->
        <attr name="PullToRefreshListView_DrawableEnd" format="reference" />

        <!-- Whether Android's built-in Over Scroll should be utilised for Pull-to-Refresh. -->
        <attr name="PullToRefreshListView_OverScroll" format="reference|boolean" />

        <!-- Base text color, typeface, size, and style for Header and Footer Loading Views -->
        <attr name="PullToRefreshListView_HeaderTextAppearance" format="reference" />

        <!-- Base text color, typeface, size, and style for Header and Footer Loading Views Sub Header -->
        <attr name="PullToRefreshListView_SubHeaderTextAppearance" format="reference" />

        <!-- Style of Animation should be used displayed when pulling. -->
        <attr name="PullToRefreshListView_AnimationStyle">
            <flag name="rotate" value="0x0" />
            <flag name="flip" value="0x1" />
        </attr>

        <!-- Whether the user can scroll while the View is Refreshing -->
        <attr name="ScrollingWhileRefreshingEnabled" format="reference|boolean" />

        <!--
        	Whether PullToRefreshListView has it's extras enabled. This allows the user to be 
        	able to scroll while refreshing, and behaves better. It acheives this by adding
        	Header and/or Footer Views to the ListView.
        -->
        <attr name="ListViewExtrasEnabled" format="reference|boolean" />

        <!--
        	Whether the Drawable should be continually rotated as you pull. This only
        	takes effect when using the 'Rotate' Animation Style.
        -->
        <attr name="RotateDrawableWhilePulling" format="reference|boolean" />

        <!-- BELOW HERE ARE DEPRECEATED. DO NOT USE. -->
        <attr name="AdapterViewBackground" format="reference|color" />
        <attr name="DrawableTop" format="reference" />
        <attr name="DrawableBottom" format="reference" />
    </declare-styleable>

</resources>