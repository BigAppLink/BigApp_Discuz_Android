<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/rebound_listview_footer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/rebound_listview_footer_progressbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/rebound_listview_footer_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="@string/rebound_listview_footer_hint_normal" />
    </LinearLayout>

</LinearLayout>