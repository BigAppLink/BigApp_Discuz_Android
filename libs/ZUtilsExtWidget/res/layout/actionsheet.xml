<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionsheet_ios_style_single_normal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/actionsheet_ios_style_top_normal"
            android:gravity="center"
            android:text="@string/camera"
            android:textColor="#037BFF"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/actionsheet_ios_style_middle_selector"
                android:gravity="center"
                android:text="@string/pick"
                android:textColor="#037BFF"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/actionsheet_ios_style_bottom_selector"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="#FD4A2E"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/actionsheet_ios_style_single_selector"
        android:gravity="center"
        android:text="@string/back"
        android:textColor="#037BFF"
        android:textSize="16sp" />

</LinearLayout>