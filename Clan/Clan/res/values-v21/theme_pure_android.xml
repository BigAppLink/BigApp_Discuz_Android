<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PureAndroidActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/bg_title</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/bg_title</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/bg_title</item>

        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->


        <!-- 去除actionbar下面的阴影Start-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除actionbar下面的阴影End-->

        <item name="actionBarStyle">@style/ActionBar.Base</item>
        <item name="actionBarSize">@dimen/height_navigation</item>
        <item name="actionMenuTextAppearance">@style/ActionBarMenu.Text</item>
        <item name="vpiTabPageIndicatorStyle">@style/PureAndroidTabPageIndicator</item>
        <item name="actionBarPopupTheme">@style/ActionBarPopupTheme.Base</item>
        <item name="actionOverflowMenuStyle">@style/ActionOverflowMenuStyle.Base</item>
    </style>



