<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--<include layout="@layout/include_line_thin" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_default_large_large_large"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/margin_default_large_large_large"
        android:background="@color/white_little_gray"
        android:orientation="vertical"
        android:padding="30dp">

        <com.kit.widget.textview.WithSpinnerTextView
            android:id="@+id/wstv"
            style="@style/with_ratingbar_textview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gotextview_height_default"

            app:WithSpinnerTextView_title="@string/default_value" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/margin_default_large"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRateIntervalleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_intervalle"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_4" />

                <TextView
                    android:id="@+id/tvRateIntervalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRateIntervalleTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_default_large"
                    android:text="@string/default_value"
                    android:textSize="@dimen/text_size_7" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTodayRemainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today_remain"
                    android:textColor="@color/text_gray"

                    android:textSize="@dimen/text_size_4" />

                <TextView
                    android:id="@+id/tvTodayRemain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTodayRemainTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_default_large"
                    android:text="@string/default_value"
                    android:textSize="@dimen/text_size_7" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>