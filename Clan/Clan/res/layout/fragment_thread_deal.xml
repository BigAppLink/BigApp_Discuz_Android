<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_frame"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.kit.widget.listview.MiniListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:divider="@color/transparent"
                android:layout_height="wrap_content" />


            <include layout="@layout/include_gray_split_top_line" />

            <com.kit.widget.textview.GoBackTextView
                android:id="@+id/gtv"
                style="@style/go_textview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gotextview_height_default"
                app:GoBackTextView_title="@string/select_rate_reason" />

            <EditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginBottom="30dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="@string/hint_say_sth"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:singleLine="false"
                android:textColor="@color/text_black_content"
                android:textColorHint="@color/z_txt_c_act_publish_item_content"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>