<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_default"
        android:orientation="horizontal"
        android:visibility="gone">
        <include layout="@layout/include_line" />

        <LinearLayout
            android:id="@+id/llReply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_default_large"
            android:layout_marginLeft="@dimen/margin_left_right_default"
            android:layout_marginTop="@dimen/margin_default_large"
            android:layout_toLeftOf="@+id/tvPage"
            android:background="@drawable/border_edit_comment"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/margin_default_medium"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_edit" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/reply_author"
                android:textColor="@color/text_azure"
                android:textSize="@dimen/text_size_dp_1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_default_large_large_large"
            android:layout_marginRight="@dimen/margin_default_large_large"
            android:gravity="center_vertical|right"
            android:minWidth="60dp"
            android:textColor="@color/text_azure"
            android:textSize="@dimen/text_size_dp_1" />

    </RelativeLayout>


</merge>
